<h1>Messages#index</h1>
<p>Find me in app/views/messages/index.html.erb</p>

<h2>Coding Dojo Wall</h2>
<h2>Welcome <%= @user.username%></h2>

<%= link_to "Log out", "/logout", data: { method: :delete, confirm: "Are you sure?" } %>

<h1>Post a message</h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<% end %>
<% end %>

<form action="/messages" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<textarea name="message[message]" id="message" cols="60" rows="10"></textarea>
	<input type="submit" value="Post a Message">
</form>

<% @message.each do |i| %>
  <h2><%= i.user.username %> - <%= i.created_at.strftime("%B #{i.created_at.day.ordinalize}, %Y") %></h2>
  <p><%= i.message %></p>
<% end %>
